{
  "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "../src",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
      "main.ts",
      "app.module.ts",
      "db/*",
      "db/migrations/*",
      "user/user.module.ts",
      "config/*",
      "user/*.unit-spec.ts",
      "health/*"
  ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
}
