{
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
      ],
      "rootDir": "../src",
      "testRegex": ".unit-spec.ts$",
      "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
      },
      "collectCoverageFrom": [
        "**/*.(t|j)s"
      ],
      "coveragePathIgnorePatterns": [
        "main.ts",
        "app.module.ts",
        "db/*",
        "db/migrations/*",
        "user/user.module.ts",
        "user/user.guard.ts",
        "config/*",
        "user/*.e2e-spec.ts",
        "health/*"
    ],
      "coverageDirectory": "../coverage",
      "testEnvironment": "node"
  }
  