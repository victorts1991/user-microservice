{
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
      ],
      "rootDir": "../src",
      "testRegex": ".unit-spec.ts$",
      "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
      },
      "collectCoverageFrom": [
        "user/*.controller.(t|j)s",
        "user/dto/*.(t|j)s",
        "user/usecase/*.(t|j)s"
      ],
     
      "coveragePathIgnorePatterns": [
        "user/delete-test-mass.controller.ts"
      ],
      "coverageDirectory": "../coverage",
      "testEnvironment": "node"
  }
  